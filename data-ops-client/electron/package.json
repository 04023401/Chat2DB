{
  "name": "data-ops-electron",
  "private": true,
  "license": "MIT",
  "author": "yuqin",
  "version": "0.0.1",
  "main": "main.js",
  "homepage": "./",
  "keywords": [
    "electron"
  ],
  "description": "Electron Application",
  "scripts": {
    "build": "rm -rf ../electorn-build && cp -r ../dist ./ && electron-builder"
  },
  "devDependencies": {
    "electron": "^20.1.4",
    "electron-builder": "^23.3.3"
  },
  "build": {
    "appId": "com.data-opt",
    "directories": {
      "output": "../electron-build"
    },
    "asar": false,
    "files": [
      "dist/**/*",
      "main.js",
      "preload.js",
      "app/**/*",
      "jre/**/*",
      "my.bat"
    ],
    "electronDownload": {
      "mirror": "https://npm.taobao.org/mirrors/electron/"
    },
    "mac": {
      "icon": "logo/logo.png",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "win": {
      "target": [
        "nsis",
        "zip"
      ]
    }
  }
}
