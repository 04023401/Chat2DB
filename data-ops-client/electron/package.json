{
  "name": "data-ops-electron",
  "private": true,
  "license": "MIT",
  "author": "yuqin, hexi",
  "version": "0.0.1",
  "main": "main.js",
  "homepage": "./",
  "keywords": [
    "electron"
  ],
  "description": "Electron Application",
  "scripts": {
    "dev": "electron .",
    "build": "rm -rf ../electron-build && cp -r ../dist ./ && electron-builder",
    "pack": "electron-builder --dir",
    "dist": "electron-builder -p always", 
  },
  "dependencies": {
    "electron-is-dev": "^2.0.0",
    "electron-updater": "^5.3.0"
  },
  "devDependencies": {
    "concurrently": "^7.5.0",
    "electron": "^21.3.0",
    "electron-builder": "^23.6.0",
    "wait-on": "^6.0.1"
  },
  "build": {
    "appId": "com.data-opt",
    "directories": {
      "output": "../electron-build"
    },
    "files": [
      "dist/**/*",
      "main.js",
      "preload.js",
      "app/**/*",
      "jre/**/*",
      "my.bat"
    ],
    "electronDownload": {
      "mirror": "https://npm.taobao.org/mirrors/electron/"
    },
    "mac": {
      "icon": "logo/logo.png",
      "artifactName": "${productName}-Mac-${version}-${arch}.${ext}",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "win": {
      "target": [
        "msi",
        "nsis",
        "zip"
      ],
      "verifyUpdateCodeSignature": false,
      "icon": "logo/logo.png",
      "artifactName": "${productName}-Win-Setup-${version}.${ext}"
    },
    "nsis": {
      "allowToChangeInstallationDirectory": false,
      "oneClick": false,
      "perMachine": false
    },
    "asar": false
  }
}
